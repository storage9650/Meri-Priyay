                    <p>Urban architecture at its finest</p>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="slide">
                <img src="https://picsum.photos/seed/slide3/900/500.jpg" alt="Ocean View">
                <div class="slide-caption">
                    <h3>Ocean View</h3>
                    <p>The calming sound of waves</p>
                </div>
            </div>

            <!-- Slide 4 -->
            <div class="slide">
                <img src="https://picsum.photos/seed/slide4/900/500.jpg" alt="Mountain Peak">
                <div class="slide-caption">
                    <h3>Mountain Peak</h3>
                    <p>Reach new heights</p>
                </div>
            </div>

            <!-- Slide 5 -->
            <div class="slide">
                <img src="https://picsum.photos/seed/slide5/900/500.jpg" alt="Forest Path">
                <div class="slide-caption">
                    <h3>Forest Path</h3>
                    <p>A journey through the woods</p>
                </div>
            </div>
        </div>

        <!-- Navigation buttons -->
        <div class="prev" onclick="changeSlide(-1)"></div>
        <div class="next" onclick="changeSlide(1)"></div>

        <!-- Dots indicators -->
        <div class="dots-container">
            <span class="dot active" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
            <span class="dot" onclick="currentSlide(4)"></span>
            <span class="dot" onclick="currentSlide(5)"></span>
        </div>

        <!-- Timer bar -->
        <div class="timer-bar" id="timerBar"></div>

        <!-- Control buttons -->
        <div class="controls">
            <button class="control-btn" id="playPauseBtn" onclick="togglePlayPause()">Pause</button>
            <button class="control-btn" onclick="resetSlideshow()">Reset</button>
        </div>
    </div>

    <script>
        let slideIndex = 1;
        let slideInterval;
        let isPlaying = true;
        const timerBar = document.getElementById('timerBar');
        const playPauseBtn = document.getElementById('playPauseBtn');

        // Initialize the slideshow
        function initSlideshow() {
            showSlide(slideIndex);
            startSlideshow();
        }

        // Create heart animation
        function createHearts() {
            const currentSlideElement = document.querySelector('.slide.active');
            const slideWidth = currentSlideElement.offsetWidth;
            const slideHeight = currentSlideElement.offsetHeight;
            
            // Create multiple hearts at random positions
            for (let i = 0; i < 8; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.classList.add('heart');
                    
                    // Random position within the slide
                    const leftPosition = Math.random() * (slideWidth - 20);
                    const bottomPosition = Math.random() * 100; // Start from bottom area
                    
                    heart.style.left = `${leftPosition}px`;
                    heart.style.bottom = `${bottomPosition}px`;
                    
                    // Random size variation
                    const scale = 0.5 + Math.random() * 0.5;
                    heart.style.transform = `rotate(45deg) scale(${scale})`;
                    
                    // Random color variation
                    const red = 255;
                    const green = Math.floor(Math.random() * 100);
                    const blue = Math.floor(Math.random() * 100);
                    const opacity = 0.5 + Math.random() * 0.5;
                    
                    heart.style.backgroundColor = `rgba(${red}, ${green}, ${blue}, ${opacity})`;
                    
                    // Set pseudo-element colors
                    const style = document.createElement('style');
                    style.innerHTML = `
                        .heart:nth-child(${i + 1}):before,
                        .heart:nth-child(${i + 1}):after {
                            background-color: rgba(${red}, ${green}, ${blue}, ${opacity});
                        }
                    `;
                    document.head.appendChild(style);
                    
                    currentSlideElement.appendChild(heart);
                    
                    // Remove heart after animation completes
                    setTimeout(() => {
                        heart.remove();
                    }, 2000);
                }, i * 200); // Stagger the appearance of hearts
            }
        }

        // Start the automatic slideshow
        function startSlideshow() {
            if (isPlaying) {
                // Start the timer bar animation
                timerBar.classList.add('active');
                
                // Set interval to change slide every 2 seconds
                slideInterval = setInterval(() => {
                    slideIndex++;
                    showSlide(slideIndex);
                    
                    // Reset and restart the timer bar animation
                    timerBar.classList.remove('active');
                    void timerBar.offsetWidth; // Trigger reflow
                    timerBar.classList.add('active');
                }, 2000);
            }
        }

        // Stop the slideshow
        function stopSlideshow() {
            clearInterval(slideInterval);
            timerBar.classList.remove('active');
        }

        // Toggle play/pause
        function togglePlayPause() {
            isPlaying = !isPlaying;
            
            if (isPlaying) {
                playPauseBtn.textContent = 'Pause';
                playPauseBtn.classList.remove('active');
                startSlideshow();
            } else {
                playPauseBtn.textContent = 'Play';
                playPauseBtn.classList.add('active');
                stopSlideshow();
            }
        }

        // Reset slideshow to first slide
        function resetSlideshow() {
            stopSlideshow();
            slideIndex = 1;
            showSlide(slideIndex);
            if (isPlaying) {
                startSlideshow();
            }
        }

        // Change slide by n positions
        function changeSlide(n) {
            stopSlideshow();
            slideIndex += n;
            showSlide(slideIndex);
            
            // Reset and restart the timer bar animation
            timerBar.classList.remove('active');
            void timerBar.offsetWidth; // Trigger reflow
            timerBar.classList.add('active');
            
            if (isPlaying) {
                startSlideshow();
            }
        }

        // Go to specific slide
        function currentSlide(n) {
            stopSlideshow();
            slideIndex = n;
            showSlide(slideIndex);
            
            // Reset and restart the timer bar animation
            timerBar.classList.remove('active');
            void timerBar.offsetWidth; // Trigger reflow
            timerBar.classList.add('active');
            
            if (isPlaying) {
                startSlideshow();
            }
        }

        // Display the current slide
        function showSlide(n) {
            const slides = document.getElementsByClassName('slide');
            const dots = document.getElementsByClassName('dot');
            
            // Handle wrap-around
            if (n > slides.length) {
                slideIndex = 1;
            }
            if (n < 1) {
                slideIndex = slides.length;
            }
            
            // Hide all slides
            for (let i = 0; i < slides.length; i++) {
                slides[i].classList.remove('active');
            }
            
            // Remove active class from all dots
            for (let i = 0; i < dots.length; i++) {
                dots[i].classList.remove('active');
            }
            
            // Show current slide and highlight current dot
            slides[slideIndex - 1].classList.add('active');
            dots[slideIndex - 1].classList.add('active');
            
            // Create hearts for the new slide
            createHearts();
        }

        // Pause slideshow on hover
        document.querySelector('.slideshow-container').addEventListener('mouseenter', () => {
            if (isPlaying) {
                stopSlideshow();
            }
        });

        // Resume slideshow when mouse leaves
        document.querySelector('.slideshow-container').addEventListener('mouseleave', () => {
            if (isPlaying) {
                startSlideshow();
            }
        });

        // Initialize the slideshow when the page loads
        window.onload = () => {
            initSlideshow();
            // Create hearts for the initial slide
            createHearts();
        };
    </script>
</body>
</html>
